            origin: self.pos[0]+20,self.pos[1]+10#self.center
            #axis:self.pos[0],self.pos[1],1
        Ellipse
            pos:self.pos[0]+20,self.pos[1]+10#self.pos#self.pos[0]+20,self.pos[1]+10#self.pos
