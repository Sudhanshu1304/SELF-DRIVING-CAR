#:kivy 1.0.9

<Car>:
    size: 40, 30
    canvas:

        PushMatrix
        Color:
            rgba: 1,1,1,1
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            source:"car_img4.png"
            pos: self.pos
            size: self.size
        Color:
            rgba: 1,0,1,0.5


        PopMatrix

<Sensor3>:

    size:25,10
    canvas:
        PushMatrix
        Color:
            rgb:(1,1,1,1)  #if self.state=="normal" else (1,0,0,1)
        Rotate:
            angle: self.angle
            origin:self.pos[0]+20,self.pos[1]+10
        Ellipse:
            pos:self.pos[0]+20,self.pos[1]+5#self.pos
            size:self.size
        PopMatrix

